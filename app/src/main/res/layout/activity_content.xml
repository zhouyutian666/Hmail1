<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F8"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#F6F7F8" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp" >
                </LinearLayout>

                <ImageButton
                    android:id="@+id/returnList"
                    android:layout_width="35dp"
                    android:layout_height="33dp"
                    android:background="@drawable/fh"
                    android:onClick="onClick" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp" >
                </LinearLayout>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="邮件详情"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/next_mail"
                        android:layout_width="24dp"
                        android:layout_height="18dp"
                        android:background="@drawable/xl"
                        android:onClick="onClick" />

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="25dp" >
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/last_mail"
                        android:layout_width="24dp"
                        android:layout_height="18dp"
                        android:background="@drawable/sl"
                        android:onClick="onClick" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:background="@drawable/shap_content" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:background="@drawable/shap_content" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/contentActivity_from_xq"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="aaaaaaaaaaaaaaaaaaaaaa" />

            <ImageView
                android:id="@+id/contentActiity_downloadSmallImg_xq"
                android:layout_width="15dp"
                android:layout_height="60dp"
                android:paddingTop="10dp"
                android:src="@drawable/fj_1" />

            <TextView
                android:id="@+id/contentActivity_downloadNumber_xq"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:paddingTop="24dp"
                android:text="99" />

            <TextView
                android:id="@+id/contentActivity_xq"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:onClick="onClick"
                android:paddingBottom="5dp"
                android:paddingTop="20dp"
                android:text="详情"
                android:textColor="#5EA5FF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/contentActivity_fajianren_yc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:text="发件人："
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/contentActivity_from_yc"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:text="bbbbbbbbbbbbbbbbbbbbbbb"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/contentActivity_yc"
                    android:layout_width="30dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:paddingTop="20dp"
                    android:text="隐藏"
                    android:textColor="#5EA5FF"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/contentActivity_shoujianren_yc"
                    android:layout_width="68dp"
                    android:layout_height="60dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:text="收件人："
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/contentActivity_to_yc"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="cccccccccccccccccccccccc"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <View
                    android:layout_width="290dp"
                    android:layout_height="0.8dp"
                    android:layout_gravity="center"
                    android:background="#EFEFEF" />

                <TextView
                    android:id="@+id/contentActivity_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="30dp"
                    android:text="日期"
                    android:textColor="#7B7B7B"
                    android:textSize="12dp" />

                <View
                    android:layout_width="290dp"
                    android:layout_height="0.8dp"
                    android:layout_gravity="center"
                    android:background="#EFEFEF" />

                <TextView
                    android:id="@+id/contentActivity_title"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="15dp"
                    android:text="dddddddddddddddddddddddddddddddd"
                    android:textSize="15dp" />

                <View
                    android:layout_width="290dp"
                    android:layout_height="0.8dp"
                    android:layout_gravity="center"
                    android:background="#EFEFEF" />

                <TextView
                    android:id="@+id/contentActivity_content"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="20dp"
                    android:paddingTop="15dp"
                    android:text="eeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee"
                    android:textSize="15dp" />

                <View
                    android:layout_width="290dp"
                    android:layout_height="0.8dp"
                    android:layout_gravity="center"
                    android:background="#EFEFEF" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/contentActivity_downloadBigImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/fj" />

                    <TextView
                        android:id="@+id/contentActivity_downloadFileName"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:text="fffffffffffffffffff"
                        android:textSize="18dp" />

                    <ImageButton
                        android:id="@+id/contentActivity_downloadBut"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/xz"
                        android:onClick="onClick" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>